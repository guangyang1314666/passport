<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guangyang.development.login.mapper.UserSocialMapper">
    <select id="findUserSocialByOpenIdAndChannel" parameterType="String" resultType="com.guangyang.development.bean.UserSocial">
        select * from `user_social` where open_id = #{openId} and channel = #{channel}
    </select>


    <select id="findUserSocialByUserId" parameterType="String" resultType="com.guangyang.development.bean.UserSocial">
        select * from `user_social` where user_id = #{userId}
    </select>


    <insert id="saveUserSocial" parameterType="com.guangyang.development.bean.UserSocial" >
        INSERT INTO user_social (
            user_id,
            open_id,
            platform,
            channel,
            create_time,
            update_time
        )
        VALUES
            (
                #{userId},
                #{openId},
                #{platform},
                #{channel},
                #{createTime},
                #{updateTime}
            )
    </insert>

